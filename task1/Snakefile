    output:
        'po_obs_data/{a}'
    log:
        'po_obs_log/{a}'
    run:
        execcommand(expand('./PO_obs_inout.py {n}', n={wildcards.a}), output[0], log[0])

rule po_member:
    params:
        3
    output:
        'po_member_data/{a}'
    log:
        'po_member_log/{a}'
    run:
        execcommand(expand('./PO_member_inout.py {n}', n={wildcards.a}), output[0], log[0])
